<table data-toggle="table" id='rushingYards'>
  <thead>
  	<tr>
  		<% @col_headers.each do |c| %>
  			<th data-sortable='true'><%= c %></th>
  		<% end %>
  	</tr>
  </thead>

  <tbody>
    
  </tbody>
</table>

<script type="text/javascript">
  var jsonData = <%= raw @source_json.to_json %>
	$(document).ready( function () {
	    var table =  $('#rushingYards').DataTable({
	    	dom: 'Bfrtlip',
    		buttons: [ 'copyHtml5','excelHtml5','csvHtml5' ],
    	    data: jsonData,
    		"order": [1, 'asc'],
	    });
	} );
</script>